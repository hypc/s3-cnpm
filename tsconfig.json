{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": ["es6"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
